@import "sanitize"
@import "helpers"
@import "fonts"

// GRID OF 12 90px COLUMNS WITH 16px GUTTER
$cols = 12
$col = 90px
$gutter = 16px
.container
  margin: 0 auto
  width: ($col * $cols)+($gutter * $cols)
.row
  clear: both
.col
  float: left
  margin-left: ($gutter/2)
  margin-right: ($gutter/2)
  box-sizing: content-box
for col in 1..$cols
  .col{col}
    width: ( col * $col ) + ( ( col - 1 ) * $gutter )

// FLUID COLS
.percent-col
  float: left
  box-sizing: content-box
$pcols = 10
for pcol in 1..$pcols
  .into-{pcol}
    width: ( 100% / pcol )

// VARIABLES

$golden-ratio = 1.61803398875

$margin-small = ($gutter)
$margin-tiny = ($gutter / 2)
$margin-basic = ($gutter * 2)
$margin-large = ($gutter * 5)

$font-size-basic = 18px
$font-leading-basic = 1.4
$font-tracking-basic = 0.003em

$color-black-soft = rgb(14, 14, 14)
$color-white-soft = rgb(253, 253, 253)
$color-black = #231f20
$color-white = #ffffff
$color-blue = #75cede

// TYPOGRAPHY

body
  font-family: 'Roboto', helvetica, arial, sans-serif
  font-size: $font-size-basic
  line-height: $font-leading-basic
  letter-spacing: $font-tracking-basic

h1
  font-size: 3em

h2
  font-size: 2.7em
  font-weight: normal

h3
  font-size: 1.5em

p
  font-size: 0.95em
  margin-bottom: 1em


// LINKS

a, a:active, a:visited
  color:inherit
  transition:opacity .2s
  &:hover
    opacity:.5


// BASIC

html
  background-color: $color-blue
  color: $color-black

img
  max-width: 100%
  height: auto

body
  border-right: 2px solid $color-black
  border-left: 2px solid $color-black
  border: 20px solid $color-blue
  border: 20px solid $color-blue
  position: fixed
  overflow: scroll
  position: fixed
  height: 100vh
  width: 100vw
  overflow: scroll

.content
  max-width: 800px
  margin: 0 auto
  
// BODY STYLES

.quicksand
  font-family: 'Quicksand', sans-serif

//the 100% widths are just so stylus can compile delete as desired

#main-container
  border-left: 2px solid $color-black
  border-right: 2px solid $color-black


// HEADER

#header,
#footer
  position: fixed
  left: 0
  right: 0
  height: 50px
  margin: 0 20px
  border: 2px solid $color-black
  display: flex
  flex-direction: row
  justify-content: space-between
  align-items: center
  background: $color-blue

  .left
    display: flex;
    flex-direction: row;
    align-items: center;

  nav
    padding: 0 20px

#header
  top: 20px

.logo
  font-size: 2em
  line-height: 50px

  span
    border-right: 2px solid $color-black
    display: inline-block
    width: 50px
    text-align: center

.title
  padding: 0 20px

// FOOTER
#footer
  bottom: 20px
  margin-top: 0
  font-size: 0.6em
  font-weight: bold

.legalix:before
  content: '>'
  margin-right: 7px

// POSTS LOOP
#posts
  width: 100%

.post
  width: 100%

#pagination
  width: 100%

// MAIN-CONTENT
#main-content
  padding: 50px 0

// ABOUT
.about-container
  padding: 70px 0

.about-container h2
  text-align: center
  margin-bottom: 30px
  
.about-container p
  text-align: center
  font-weight: bold
  


// MEDIA QUERIES

@media screen and (max-width: ($col * $cols)+($gutter * $cols))
  html
    width: 100%
